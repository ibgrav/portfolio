{
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "cdk.out", "dist"],

  "ts-node": {
    "esm": true
  },

  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",

    "moduleResolution": "Node",

    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}
