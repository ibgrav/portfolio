{
  "include": ["src"],

  "compilerOptions": {
    "outDir": "dist",

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",

    "lib": ["ESNext"],

    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true
  }
}
